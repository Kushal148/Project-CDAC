@model IEnumerable<ProjectDatabaseLib.Hotel>

@{
    ViewBag.Title = "Hotels";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("New Hotel", "NewHotel", "Admin", null, new { @class = "btn btn-info btn-large" })
</p>
@using (Html.BeginForm())

{<div style="        position: absolute;
        margin-top: 50px;

        box-sizing:border-box;

">
        <p>Hotel Name : <input type="text" id="MyId" name="id" /></p>
        <input style="" type="submit" value="search" />
    </div>
    foreach (var item in Model)
    {

        <div class="container" style="margin-top:50px">
            <div class="row"></div>
            <div class="card" style="width: 50%; margin-left: 25%; margin-right: 25%;">
                <img class="col-sm" src="@Url.Content(item.hotelImage)" alt="Card image cap" style=" width: 15%; height: 15%;">
                <div class=" col-sm">
                    <h5> @Html.DisplayFor(modelItem => item.HotelName)</h5>
                    <h5>Hotel Price:  @Html.DisplayFor(modelItem => item.Price) </h5>
                    <h5>Hotel Type: @Html.DisplayFor(modelItem => item.Hoteltype) Star</h5>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                    <button class="btn btn-light" type="submit">@Html.ActionLink("Edit", "HotelUpdate", new {id = item.Id })</button>

                    <button class="btn btn-sm btn-dark text-light" type="submit">@Html.ActionLink("Delete", "HotelDelete", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');" })</button>

                </div>
            </div>
        </div>
    }

}